= form_for(@bug) do |f|
  - if @bug.errors.any?
    #error_explanation
      %h2
        = pluralize(@bug.errors.count, "error")
        prohibited this bug from being saved:
      %ul
        - @bug.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :status_id
    %br/
    = f.number_field :status_id
  .field
    = f.label :assigned_to_user_id
    %br/
    = f.number_field :assigned_to_user_id
  .actions
    = f.submit
